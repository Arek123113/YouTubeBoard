@model IEnumerable<YouTubeBoardCore.Models.VideoModel>
@{
    ViewData["Title"] = "Videos";
}


<div class="container">
	<div class="text-center">
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-sm-6">
					<div class="img-thumbnail">
						<div style="background-color: blue; height: 6rem; width: 15rem;">

						</div>
						<p>@item.Name</p>
						<a href="#">
							<button class="btn btn-info">Show More</button>
						</a>
					</div>
				</div>
			}
		</div>
	</div>
</div>